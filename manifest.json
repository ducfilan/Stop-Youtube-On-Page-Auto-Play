{
  "manifest_version": 2,

  "name": "Stop Youtube On Page Auto Play",
  "description": "Stop Youtube videos from auto playing when you visit web pages.",
  "version": "1.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ],
  "background": { 
    "scripts": ["popup.js"] 
  },
   "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["popup.js"]
    }
  ]
}